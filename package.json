{
  "name": "developer-treasury-management-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "fuzz:test": "npx rv . treasury-core test --runs 100",
    "fuzz:invariant": "npx rv . treasury-core invariant --runs 100",
    "fuzz": "npm run fuzz:test && npm run fuzz:invariant",
    "fuzz:extended": "npx rv . treasury-core test --runs 1000 && npx rv . treasury-core invariant --runs 1000",
    "test:all": "npm run test && npm run fuzz"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.0.2",
    "@stacks/transactions": "^7.0.6",
    "@types/node": "^22.15.18",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@stacks/rendezvous": "^0.10.0"
  }
}
